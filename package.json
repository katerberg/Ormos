{
  "name": "ormos",
  "version": "1.0.0",
  "description": "Archivist for MTG cards, assistant to store owners everywhere",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config ./webpack.config.js --mode production",
    "fetch:allPrintings": "curl https://mtgjson.com/api/v5/AllPrintings.sql > data/AllPrintings.sqlite",
    "start:stable": "concurrently -k 'npm run start:stable-server' 'npm run start:stable-ui'",
    "start:stable-server": "tsc server/index.ts && node server/index.js 9081",
    "start:stable-ui": "NODE_ENV=production webpack-dev-server --config ./webpack.config.js --mode development",
    "start": "concurrently -k 'npm run start:server' 'npm run start:ui'",
    "start:server": "ENV=development nodemon server/index.ts -- 8081",
    "start:ui": "webpack-dev-server --config ./webpack.config.js --mode development",
    "lint": "npm run lint:style && npm run lint:ts",
    "lint:style": "npm run lint:style-base -- --fix",
    "lint:style-base": "stylelint \"**/*.scss\"",
    "lint:ts": "npm run lint:ts-base -- --fix",
    "lint:ci": "npm run lint:ts-base && npm run lint:style-base",
    "lint:ts-base": "eslint --ext js,ts src server",
    "test": "jest"
  },
  "author": "katerberg@fastmail.fm",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@webpack-cli/generators": "^3.0.1",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^29.5.0",
    "concurrently": "^8.0.1",
    "css-loader": "^6.7.3",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "html-webpack-plugin": "^5.5.1",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.5",
    "nodemon": "^2.0.22",
    "postcss-loader": "^7.2.4",
    "sass": "^1.62.0",
    "sass-loader": "^13.2.2",
    "style-loader": "^3.3.2",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^8.0.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.3"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "body-parser": "^1.20.2",
    "express": "^4.19.2",
    "sqlite3": "^5.1.6"
  }
}